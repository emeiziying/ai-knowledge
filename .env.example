# =============================================================================
# AI Knowledge Base - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=AI Knowledge Base
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# Backend API port
BACKEND_PORT=8000

# Frontend port
FRONTEND_PORT=3000

# Nginx ports (production)
HTTP_PORT=80
HTTPS_PORT=443

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_DB=ai_knowledge_base
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Qdrant Vector Database Configuration
# -----------------------------------------------------------------------------
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# -----------------------------------------------------------------------------
# MinIO Object Storage Configuration
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_BUCKET=documents
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# -----------------------------------------------------------------------------
# JWT Authentication Configuration
# -----------------------------------------------------------------------------
SECRET_KEY=your_jwt_secret_key_change_in_production_minimum_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# AI Services Configuration
# -----------------------------------------------------------------------------
# OpenAI API (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (optional)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_PORT=11434

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_APP_NAME=AI Knowledge Base
VITE_APP_VERSION=1.0.0
VITE_DEV_MODE=false

# -----------------------------------------------------------------------------
# Production Settings
# -----------------------------------------------------------------------------
# SSL Certificate paths (for production nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Domain configuration (for production)
DOMAIN=localhost